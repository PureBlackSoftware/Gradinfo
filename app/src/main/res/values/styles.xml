<resources>

    <!-- region PureRoot -->
    <style name="PureRoot" />

    <style name="PureRoot.Coordinator" parent="PureRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PureRoot.Relative" parent="PureRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- endregion -->

    <!-- region PureBox -->
    <style name="PureBox" />

    <style name="PureBox.Container.Scrollable" parent="PureBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="PureBox.Scroll" parent="PureBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="PureBox.Linear" parent="PureBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- endregion -->

    <!-- region PureBar -->
    <style name="PureBar" />

    <style name="PureBar.AppBar" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PureBar.Toolbar" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:statusBarColor</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="PureBar.Relative" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PureBar.Relative.Image" parent="PureBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="PureBar.Relative.Text" parent="PureBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/App_TextSize_L</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="PureBar.BottomNav" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">?android:statusBarColor</item>
        <item name="layout_behavior">@string/hide_bottom_view_on_scroll_behavior</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="PureBar.Search" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">flagNoExtractUi|flagNoFullscreen</item>
        <item name="android:textSize">@dimen/App_TextSize_M</item>
        <item name="android:background">@drawable/shape_search</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@null</item>
    </style>
    <!-- endregion -->

    <!-- region PureButton -->
    <style name="PureButton" />

    <style name="PureButton.Text.Title" parent="PureButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/App_TextSize_L</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="PureButton.Relative" parent="PureButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PureButton.Relative.Image" parent="PureButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="PureButton.Relative.Text" parent="PureButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/App_TextSize_L</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>
    <!-- endregion -->

    <!-- region PureInfo -->
    <style name="PureInfo" />

    <style name="PureInfo.Text.Title" parent="PureInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/App_TextSize_L</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="PureInfo.Text.Content" parent="PureInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/App_TextSize_M</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="PureInfo.Text.Content.Card" parent="PureInfo.Text.Content">
        <item name="android:background">@drawable/shape_info</item>
    </style>
    <!-- endregion -->

    <!-- region PureGrad -->
    <style name="PureGrad" />

    <style name="PureGrad.Recycler" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="PureGrad.Card" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PureGrad.Linear" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PureGrad.Linear.Vertical" parent="PureGrad.Linear">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PureGrad.Image" parent="PureGrad">
        <item name="android:layout_width">@dimen/Grad_Image_Width</item>
        <item name="android:layout_height">@dimen/Grad_Image_Height</item>
    </style>

    <style name="PureGrad.Text" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/App_TextSize_M</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>
    <!-- endregion -->

</resources>