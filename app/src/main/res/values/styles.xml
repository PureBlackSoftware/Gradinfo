<resources>

    <!-- region PureRoot -->
    <style name="PureRoot" />

    <style name="PureRoot.Coordinator" parent="PureRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PureRoot.Relative" parent="PureRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- endregion -->

    <!-- region PureBox -->
    <style name="PureBox" />

    <style name="PureBox.Container.Scrollable" parent="PureBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>
    <!-- endregion -->

    <!-- region PureBar -->
    <style name="PureBar" />

    <style name="PureBar.AppBar" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PureBar.Toolbar" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/Toolbar</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="PureBar.Toolbar.Relative" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PureBar.Toolbar.Image" parent="PureBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="PureBar.Toolbar.Text" parent="PureBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PureBar.BottomNav" parent="PureBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/Toolbar</item>
        <item name="layout_behavior">@string/hide_bottom_view_on_scroll_behavior</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>
    <!-- endregion -->

    <!-- region PureGrad -->
    <style name="PureGrad" />

    <style name="PureGrad.Recycler" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="PureGrad.Card" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PureGrad.Linear" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PureGrad.Linear.Vertical" parent="PureGrad.Linear">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PureGrad.Image" parent="PureGrad">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="PureGrad.Text" parent="PureGrad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
    <!-- endregion -->

</resources>